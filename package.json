{
  "name": "@singularity/workspace",
  "private": "true",
  "license": "ISC",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev:native": "npm run --workspace=@singularity/native tauri dev",
    "dev:views": "npm run --workspace=@singularity/views dev",
